//WAP to print AP of given number 

import java.util.*;

public class ApProgram{
	
	public static void main(String[] args){
		
		int a,n,d,sn;
		
		Scanner sc=new Scanner(System.in);
		
		System.out.println("enter the number for a ");
		a=sc.nextInt();
		
		System.out.println("enter the number for n ");
		n=sc.nextInt();
		
		
		System.out.println("enter the number for d ");
		d=sc.nextInt();
		
		sc.close();
		
		sn=n/2+(2*a+(n-1)*d);
		
			System.out.println("output"sn);
		
	}
}
		
		